    "version": "0.2.0",
    "configurations": [
        {
            "name": "auth",
            "program": "${workspaceFolder}/handlers/auth.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "pocket",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/helpers/pocket.js"
        }

    ]
}
